@using HomeOrganizer.Components
@using HomeOrganizer.Models.User;

@page "/"

<PageTitle> Home Organizer </PageTitle>

<TopBar User="@user" />
<MudContainer Class="content px-4" Style="height:90%">
    @if (user == null)
    {
        <MudGrid Justify="Justify.Center" Class="align-content-center" Style="height:100%">
            <MudItem>
                <MudPaper Height="140px" Width="140px" Class="align-content-center justify-content-center">
                    <MudGrid Justify="Justify.Center" Class="align-content-center" Style="height:100%">
                        <MudItem>
                            <MudButton OnClick="LoginUser" EndIcon="@Icons.Material.Filled.Login" IconColor="Color.Success" Variant="Variant.Outlined">
                                LOGIN
                            </MudButton>
                        </MudItem>
                    </MudGrid>
                </MudPaper>
            </MudItem>
        </MudGrid>
    }
    else
    {

    }
</MudContainer>

@code {
    UserData user;
    bool autoLoginAdming = true;

    private void LoginUser()
    {
        user = new UserData("Admin");
    }

    protected override void OnInitialized()
    {
        if (autoLoginAdming) LoginUser();
        base.OnInitialized();
    }
}