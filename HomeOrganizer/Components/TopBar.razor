@using HomeOrganizer.Models.User;
<MudThemeProvider @bind-IsDarkMode="@isDarkMode" Theme="customTheme" />

<MudAppBar Color="Color.Inherit" Fixed="false" Dense="true">
    <MudButton StartIcon="@Icons.Material.Filled.Home" Color="Color.Inherit" ButtonType="ButtonType.Button" Link="\">
        <MudText>
            Home organizer
        </MudText>
    </MudButton>
    @if (User != null)
    {
        <MudSpacer />
        <MudText>
            @welcome
        </MudText>
    }
    <MudSpacer />
    <MudIconButton Icon=@themeButtonIcon Color="Color.Tertiary" Class="ma-4" T="bool" OnClick="ChangeThemeMode" Title="Change Theme Button" />
</MudAppBar>

@code {
    [Parameter]
    public UserData User { get; set; }
    private string welcome = string.Empty;

    protected override Task OnParametersSetAsync()
    {
        if (User != null)
        {
            string[] welcomes = new string[] { "Hello", "Welcome", "Good day", "Yo, what's up", " Good to see you", "Welcome back" };
            welcome = $"{welcomes[Random.Shared.Next(welcomes.Length)]}, {User.Name}!";
        }
        return base.OnParametersSetAsync();
    }

    private void ChangeThemeMode()
    {
        isDarkMode = !isDarkMode;
        if (isDarkMode)
        {
            themeButtonIcon = Icons.Material.Filled.WbSunny;
        }
        else
        {
            themeButtonIcon = Icons.Material.Filled.NightsStay;
        }
    }

    private string themeButtonIcon = Icons.Material.Filled.NightsStay;
    private bool isDarkMode = false;

    private MudTheme customTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                // Main colors
                Primary = Colors.Blue.Lighten1,
                Secondary = Colors.Teal.Lighten1,

                // Theme icon color...
                Tertiary = Colors.BlueGrey.Lighten1,

                // Main elements
                Background = Colors.LightBlue.Lighten4,


                // Appbar
                AppbarBackground = Colors.DeepOrange.Lighten2,
                AppbarText = Colors.Shades.Black
            },

            PaletteDark = new PaletteDark()
            {
                Primary = Colors.Blue.Darken2,
                Secondary = Colors.Teal.Darken2,

                Tertiary = Colors.Amber.Lighten3,
            },

            LayoutProperties = new LayoutProperties()
            {
                DrawerWidthLeft = "260px",
                DrawerWidthRight = "300px"
            }
        };

}